#!/bin/bash

rm -f ${HOME}/.local/share/data/QtProject/qtcreator/plugins/4.2.82/*
sudo rm -rf /opt/linkmotion/qtcreator/lib/qtcreator/plugins/liblm*
sudo rm -rf /opt/linkmotion/qtcreator/share/qtcreator/templates/wizards/linkmotion

set -e

export QTC_INSTALL=/opt/linkmotion/qtcreator/

if [[ ! -d ${QTC_SOURCE} ]]; then
  echo
  echo "Qt Creator source path does not exist."
  echo " => ${QTC_SOURCE}"
  echo
  exit 1
fi

/opt/linkmotion/qt/5.8.0/bin/qmake -r
make
sudo make install
sudo cp -r share/* /opt/linkmotion/qtcreator/share
#gdb /opt/linkmotion/qtcreator/bin/qtcreator
